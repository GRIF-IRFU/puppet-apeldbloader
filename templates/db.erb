[db]
# type of database
backend = <%= @db_backend %>
# host with database
hostname = <%= @db_hostname %>
# port to connect to
port = <%= @db_port %>
# database name
name = <%= @db_name %>
# database user
username = <%= @db_user %>
# password for database
password = <%= @db_pass %>
# how many records should be put/fetched to/from database
# in single query
records = <%= @records_per_query %>
